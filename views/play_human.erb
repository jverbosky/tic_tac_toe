<!-- /views/play_human.erb -->

<% if round % 2 == 0 %>
  <% current_player = "O" %>
<% else %>
  <% current_player = "X" %>
<% end %>

<h3>Round <%= round %></h3>

<% if round <= 2 %>
  <% if result == "" %>
    <p>It's Human <%= current_player %>'s move!</p>
  <% else %>
    <p><%= result %> <%= current_player %>.</p>
  <% end %>
<% else %>
  <% if result == "" %>
    <p>It's Human <%= current_player %>'s move again!</p>
  <% else %>
    <p><%= result %> <%= current_player %>!</p>
  <% end %>
<% end %>

<p>Please select a location and press <b>Submit</b>.</p>
<form method="post" action="result_human">
  <select type="text" name="location">
    <option value="t1">T1 (top left)</option>
    <option value="t2">T2 (top center)</option>
    <option value="t3">T3 (top right)</option>
    <option value="m1">M1 (middle left)</option>
    <option value="m2">M2 (middle center)</option>
    <option value="m3">M3 (middle right)</option>
    <option value="b1">B1 (bottom left)</option>
    <option value="b2">B2 (bottom center)</option>
    <option value="b3">B3 (bottom right)</option>
  </select>
  <input type="submit" value="Submit">
</form>